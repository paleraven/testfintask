<hibernate-mapping>
    <class name="ru.yalymar.mvc.model.models.Account" table="account">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <!-- model -->
        <property name="id" column="id" unique="true" not-null="true"/>
        <property name="name" column="name" not-null="true"/>
        <property name="created" column="created"/>
    </class>
</hibernate-mapping>